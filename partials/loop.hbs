
{{#foreach posts}}

<article class="{{post_class}}">
	<header class="post-header">
		<h2 class="post-title">{{{title}}}</h2>
		<span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MM/DD/YY"}}</time></span>
	</header>
	<section class="post-excerpt">
		<p>{{excerpt characters="300"}}&hellip;</p>
	</section>
  <a class="post-link" href="{{url}}"></a>
</article>

{{/foreach}}

{{pagination}}
