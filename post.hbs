{{!< default}}

{{#post}}

<div class="progress-container">
	<span class="progress-bar"></span>
</div>

<nav id="navigation">
	<span id="home-button" class="nav-button">
		<a class="home-button" href="{{@blog.url}}" title="{{t "Home"}}">  {{t "Home"}}</a>
	</span>
</nav>

<header id="post-header"{{#if feature_image}} class="has-cover" {{/if}}>
		<h1 class="post-title">{{{title}}}</h1>
		{{#if feature_image}}<div class="post-cover cover" style="background-image: url('{{feature_image}}');"></div>{{/if}}
</header>

<main class="content" role="main">
	<article class="{{post_class}}">
		<p class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time></p>
		<div class="inner">

		<section class="post-content">
			{{content}}
		</section>

		</div>

	</article>
</main>

{{/post}}
